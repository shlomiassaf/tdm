{
  "extends": "./tsconfig",
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "inlineSourceMap": true,
    "strictNullChecks": false,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
      "hammerjs",
      "node"
    ],
    "noEmit": false,
    "declaration": true,
    "outDir": "."
  },
  "exclude": [
    "node_modules",
    "dist",
    "dist_package",
    "e2e",
    "src/**/*.spec.ts",
    "src/demo"
  ]
}
